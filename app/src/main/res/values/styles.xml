<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditText">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">18dp</item>
        <item name="android:textColorHint">@color/dark_blue</item>
        <item name="android:maxLength">30</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">18sp</item>
        <item name="android:textColorHint">@color/dark_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="Text_View_RvPet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text_View_Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Rv_Image_Pet">
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">88dp</item>
        <item name="background">@drawable/adapter_image_pets</item>
    </style>

    <style name="ContainerComponets">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/dark_blue</item>
    </style>

    <style name="ContainerComponetsPets">
        <item name="android:layout_width">327dp</item>
        <item name="android:layout_height">117dp</item>
        <item name="android:background">@drawable/adapter_pets</item>
    </style>

    <style name="button_perfil">
        <item name="background">@drawable/buttonnull</item>
        <item name="android:textSize">8sp</item>
        <item name="android:color">@color/dark_blue</item>
    </style>

    <style name="ButtonAdopte">
        <item name="android:layout_width">175dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/dark_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>