<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4B7A7777"/>
            <corners android:radius="40dp" />
        </shape>
    </item>

    <item
        android:left="1dp"
        android:right="1dp"
