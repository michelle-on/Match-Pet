<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.matchpet">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MatchPet">
        <activity
            android:name=".screen.activity.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".screen.activity.FavoriteActivity"
            android:exported="false" />
        <activity
            android:name=".screen.activity.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".screen.activity.AddPetActivity"
            android:exported="false" />
        <activity
            android:name=".screen.activity.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".screen.MainActivity"
            android:exported="false" />
        <activity
            android:name=".screen.activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".screen.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>